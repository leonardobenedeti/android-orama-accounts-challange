<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/icon"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_aviao"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/account_value"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:layout_toEndOf="@+id/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo"
            android:id="@+id/textView5"
            android:layout_below="@+id/icon"
            android:layout_alignLeft="@+id/account_value"
            android:layout_alignStart="@+id/account_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="R$ 300.000.000,00"
            android:id="@+id/saldo_value"
            android:paddingRight="20dp"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resgate"
            android:id="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/saldo_value"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="R$ 300.000.000,00"
            android:paddingRight="20dp"
            android:id="@+id/resgate_value"
            android:textColor="@android:color/holo_blue_light"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ccc"
            android:paddingTop="20dp"
            android:layout_below="@+id/resgate_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/divider"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="R$ 300.000.000,00"
            android:paddingRight="20dp"
            android:id="@+id/total_value"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Total"
            android:id="@+id/textView10"
            android:layout_below="@+id/divider"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>